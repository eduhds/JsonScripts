  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "variables": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string",
          "pattern": "any string here"
        }
      },
      "additionalProperties": false
    },
    "scripts": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string",
          "pattern": "any string here"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "scripts"]
}